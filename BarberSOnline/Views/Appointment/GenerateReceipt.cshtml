                            </dl>
                            <hr />
                            <div>
                                <a asp-action="ViewAll" class="btn btn-primary">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <script>alert("@ViewBag.ErrorMessage"); window.location = '/Appointment/UserAppointment';</script>
}

<style>
    .form-gap {
        padding-top: 10px;
    }
</style>
