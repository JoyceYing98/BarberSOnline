@model BarberSOnline.Models.AppointmentModel
@using BarberSOnline.Areas.Identity.Data
@inject SignInManager<BarberSOnlineUser> SignInManager

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <h2>Appointment Details</h2>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Services)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Services)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Charges)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Charges)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment_Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment_Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User_Booked_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User_Booked_Date)
        </dd>
        @if (Model.Appointment_Status == "Approved" || Model.Appointment_Status == "Confirmed" ||
              Model.Appointment_Status == "Attended" || Model.Appointment_Status == "Pending to Pay" ||
              Model.Appointment_Status == "Paid")
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Remark)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Remark)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Barber_Approved_Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Barber_Approved_Date)
            </dd>
            if (Model.Appointment_Status == "Confirmed" || Model.Appointment_Status == "Attended" ||
                Model.Appointment_Status == "Pending to Pay" || Model.Appointment_Status == "Paid")
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User_Confirmed_Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User_Confirmed_Date)
                </dd>
                if (Model.Appointment_Status == "Attended" || Model.Appointment_Status == "Pending to Pay" || Model.Appointment_Status == "Paid")
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Barber_Check_In_Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Barber_Check_In_Date)
                    </dd>
                }
            }
        }
        @if (Model.Appointment_Status == "Cancelled")
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Remark)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Remark)
            </dd>
            if (!Model.Barber_Approved_Date.ToString().Equals("1/1/0001 12:00:00 AM"))
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Barber_Approved_Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Barber_Approved_Date)
                </dd>
            }

            if (!Model.User_Confirmed_Date.ToString().Equals("1/1/0001 12:00:00 AM"))
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User_Confirmed_Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User_Confirmed_Date)
                </dd>
            }

            if (Model.User_Cancelled_Reason != null)
            {
                if (User.IsInRole("Admin") || User.IsInRole("Barber"))
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserEmail)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserEmail)
                    </dd>
                }
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User_Cancelled_Reason)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User_Cancelled_Reason)
                </dd>
            }
            else if (Model.Barber_Cancelled_Reason != null)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BarberEmail)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BarberEmail)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Barber_Cancelled_Reason)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Barber_Cancelled_Reason)
                </dd>
            }
            else if (Model.Admin_Cancelled_Reason != null)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AdminEmail)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AdminEmail)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Admin_Cancelled_Reason)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Admin_Cancelled_Reason)
                </dd>
            }
        }
    </dl>
</div>
<div>
    @{
        if (User.IsInRole("Admin") || User.IsInRole("Barber"))
        {
            if (User.IsInRole("Barber"))
            {
                <a asp-action="BarberApproval" asp-route-id="@Model.ID" class="btn btn-primary">Approve </a><label>|</label>
            }
            <a asp-action="ViewAll" class="btn btn-primary">Back to List</a>
        }
        else if (User.IsInRole("User"))
        {
            <a asp-action="UserEdit" asp-route-id="@Model.ID" class="btn btn-primary">Update </a><label>|</label>
            <a asp-action="UserAppointment" class="btn btn-primary">Back to List</a>
        }
    }
</div>
