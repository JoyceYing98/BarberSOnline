@model List<ProfileRolesModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input type="hidden" asp-for="@Model[i].RoleName" />

                <input class="form-check-input" id="checkValidate" asp-for="@Model[i].Selected" />
                <label class="form-check-label" asp-for="@Model[i].Selected">
                    @Model[i].RoleName
                </label>
            </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="Index" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>

<script>

    $(document).ready(function () {

        $('#checkValidate').change(function () {

            if (this.checked) {
                $('#checkValidate').not(this).prop('checked', false);
            }
        });

    });

</script>