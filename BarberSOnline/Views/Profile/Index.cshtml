@using BarberSOnline.Models
@model List<BarberSOnline.Models.ProfileModel>
@using Microsoft.AspNetCore.Identity
@using BarberSOnline.Areas.Identity.Data
@inject UserManager<BarberSOnlineUser> UserManager

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Scripts{
    <script>
        $('#tableSearch').load('Index.cshtml', function () {
            $("#tableSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}

<h1>List of Users</h1>
<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-secondary">Register a User</a>
<br />
<br />
<input class="form-control mb-4" id="tableSearch" type="text" placeholder="&nbsp; Type something to search list items" style="height:40px;  border-radius: 8px; border: 1px solid black; margin:auto;">

<table class="table table-striped table-bordered">
    <thead>
        <tr>

            <th>User Name</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Roles</th>
            <th>Manage Role</th>

            <th>Delete Profile</th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var user in Model)
        {
        <tr>

            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.PhoneNumber</td>
            <td>@user.Address</td>
            <td>@string.Join(" , ", user.Roles.ToList())</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="Profile" asp-action="Manage" asp-route-userId="@user.UserId">Manage</a>
            </td>

            <td>
                <form asp-action="Delete" asp-route-id="@user.UserId" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>